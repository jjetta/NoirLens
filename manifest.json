{
  "manifest_version": 3,
  "name": "NoirLens",
  "version": "1.0",
  "description": "Toggle whatever webpage you want to be black and white!",
  "permissions": ["tabs", "storage", "activeTab", "windows"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/content.js"]
    }
  ] 
}

